<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.ui.statisticsView.RunDetailsController" hgap="10" vgap="6" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;">
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="140" />
        <ColumnConstraints minWidth="200" prefWidth="320" />
    </columnConstraints>

    <children>
        <Label text="Index:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="indexLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Expansion level:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="expansionLevelLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Input:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="inputLabel" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Result:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="resultLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Cycles:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Label fx:id="cyclesLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    </children>
</GridPane>


