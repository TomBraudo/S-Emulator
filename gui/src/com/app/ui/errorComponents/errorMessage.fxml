<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.ui.errorComponents.ErrorMessageController"
            prefHeight="200.0" prefWidth="400.0"
            styleClass="card-danger">

    <children>
        <VBox alignment="CENTER" spacing="15.0"
              AnchorPane.topAnchor="15.0"
              AnchorPane.leftAnchor="15.0"
              AnchorPane.rightAnchor="15.0"
              AnchorPane.bottomAnchor="15.0">

            <!-- Header -->
            <Label text="âš  Error"
                   styleClass="label-strong" />

            <!-- Error message label -->
            <Label fx:id="errorLabel"
                   wrapText="true"
                   maxWidth="350"
                   alignment="CENTER"
                   styleClass="card-subtle content-pad" />

            <!-- Confirm button -->
            <Button text="Confirm"
                    onAction="#handleConfirm"
                    styleClass="btn btn-danger" />
        </VBox>
    </children>
</AnchorPane>
