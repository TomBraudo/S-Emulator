<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="220.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.ui.dashboard.components.chargeCredits.ChargeCreditsController">
  <center>
    <VBox alignment="CENTER" spacing="10.0" styleClass="content-pad">
      <children>
        <Label fx:id="titleLabel" text="Charge Credits" styleClass="label-section" />
        <TextField fx:id="creditsField" promptText="Enter amount of credits" />
        <Label fx:id="errorLabel" textFill="red" visible="false" />
        <HBox alignment="CENTER" spacing="10.0">
          <children>
            <Button fx:id="chargeButton" text="Charge" styleClass="btn btn-primary" onAction="#onCharge" />
            <Button fx:id="cancelButton" text="Cancel" styleClass="btn btn-ghost" onAction="#onCancel" />
          </children>
        </HBox>
      </children>
    </VBox>
  </center>
</BorderPane>
