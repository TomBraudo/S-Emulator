<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="chatRoot" prefHeight="500.0" prefWidth="600.0" styleClass="content-pad" stylesheets="../app.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.ui.chat.ChatController">
   <children>
      <Label alignment="CENTER" layoutX="200.0" layoutY="14.0" prefHeight="31.0" prefWidth="200.0" styleClass="label-title" text="S-Emulator - Chat" />
      <Button fx:id="dashboardButton" layoutX="498.0" layoutY="450.0" mnemonicParsing="false" onAction="#onBackToDashboard" prefHeight="31.0" prefWidth="88.0" styleClass="btn btn-primary" text="Dashboard" />
      <ScrollPane fx:id="messagesScrollPane" layoutX="14.0" layoutY="54.0" prefHeight="330.0" prefWidth="572.0" styleClass="scroller">
         <content>
            <VBox fx:id="messagesContainer" prefHeight="320.0" prefWidth="560.0" spacing="6.0" styleClass="content-pad" />
         </content>
      </ScrollPane>
      <TextArea fx:id="messageInput" layoutX="14.0" layoutY="394.0" prefHeight="46.0" prefWidth="472.0" promptText="Type your message here..." wrapText="true" />
      <Button fx:id="sendButton" layoutX="498.0" layoutY="394.0" mnemonicParsing="false" onAction="#onSendMessage" prefHeight="46.0" prefWidth="88.0" styleClass="btn btn-primary" text="Send" />
   </children>
</AnchorPane>
